<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:stv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.UserCenterFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:paddingBottom="10dp">
            <com.example.lovecominghome.Entity.RoundImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="@dimen/padding_left_and_right"
                android:scaleType="centerCrop"
                android:src="@mipmap/default_girl"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="30dp"
                        android:paddingTop="20dp"
                        android:text="@string/username"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="小明"
                        android:textSize="20sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/user_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="30dp"
                        android:paddingTop="20dp"
                        android:text="@string/usernum"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/user_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="001"
                        android:textSize="20sp"
                        android:textStyle="bold"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.example.lovecominghome.Entity.ItemView
                android:id="@+id/change_information"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"
                app:hiddenIcon="false"
                app:icon="@mipmap/edit"
                app:text="修改个人信息" />
            <com.example.lovecominghome.Entity.ItemView
                android:id="@+id/guide"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"
                app:hiddenIcon="false"
                app:icon="@mipmap/guide"
                app:text="志愿服务手册" />
            <com.example.lovecominghome.Entity.ItemView
                android:id="@+id/be_volunteer"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"
                app:hiddenIcon="false"
                app:icon="@mipmap/be_volunteer"
                app:text="成为志愿者" />
            <com.example.lovecominghome.Entity.ItemView
                android:id="@+id/donation"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"
                app:hiddenIcon="false"
                app:icon="@mipmap/donation"
                app:text="公益捐款" />
            <com.example.lovecominghome.Entity.ItemView
                android:id="@+id/contact_us"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"
                app:hiddenIcon="false"
                app:icon="@mipmap/contact_us"
                app:text="联系我们" />
            <com.example.lovecominghome.Entity.ItemView
                android:id="@+id/my_finding"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"
                app:hiddenIcon="false"
                app:icon="@mipmap/my_finding"
                app:text="我的寻人" />
            <com.example.lovecominghome.Entity.ItemView
                android:id="@+id/my_task"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"
                app:hiddenIcon="false"
                app:icon="@mipmap/my_task"
                app:text="我参与的" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center|center_horizontal|center_vertical" >
        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="退出登录"
            android:textSize="20sp"
            android:background="@drawable/button_selected">
        </Button>
    </LinearLayout>

    </LinearLayout>

</ScrollView>